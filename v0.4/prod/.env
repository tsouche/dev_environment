################################################################################
# Production Environment Configuration - v0.4
# 
# Target: Synology NAS (production)
# Purpose: Production server with TLS proxy (NO debugging tools)
# Container Name: server-container
# External Access: https://set.domain.synology.me -> http://localhost:5666
################################################################################

# Project Configuration
PROJECT_NAME=set_backend
PROJECT_DIR=set_backend
# Absolute path on Synology NAS
PROJECT_PATH=/volume1/docker/set/backend

# GitHub Repository (for automatic cloning in test/prod)
# Production uses the latest stable tag instead of a branch
GITHUB_REPO_URL=https://github.com/tsouche/set_backend
GITHUB_TAG=latest  # Use 'latest' for most recent tag, or specify like 'v1.0.0'

# Container Names
CONTAINER_NAME=server-container
CONTAINER_MONGODB=prod-mongodb
HOSTNAME=server-host

# Network
NETWORK_NAME=prod-network

# Port Mappings
# No SSH, No Mongo Express in production
APP_PORT=5666              # Application web interface (proxied)
MONGO_PORT=27017           # MongoDB (internal only, not exposed)

# External URL (configured in Synology Reverse Proxy)
EXTERNAL_URL=https://set.domain.synology.me

# Database Configuration
DB_NAME=rust_app_db
DB_USER=app_user
DB_PASSWORD=CHANGEME_SecureProductionPassword789!
DB_ADMIN_USER=admin
DB_ADMIN_PASSWORD=CHANGEME_SecureProdAdmin789!

# User/Group IDs (Synology)
USER_UID=1026
USER_GID=110
USERNAME=rustdev
GROUPNAME=rustdevteam

# Production Settings
RUST_LOG=warn

# Volumes - Absolute paths on Synology NAS
VOLUME_MONGODB_DATA=/volume1/docker/set/mongodb/data
VOLUME_MONGODB_INIT=/volume1/docker/set/mongodb/init
VOLUME_CARGO_CACHE=/volume1/docker/set/cargo_cache
VOLUME_TARGET_CACHE=/volume1/docker/set/target_cache

# Docker Images
MONGO_IMAGE=mongo:7.0-jammy

# MongoDB Collections
COLLECTION_1=setplayers
COLLECTION_2=setgames
COLLECTION_3=setstats
