################################################################################
# Test Environment Configuration - v0.4
# 
# Target: Synology NAS (testing)
# Purpose: Backend testing with TLS proxy
# Container Name: backend-container
# External Access: https://test_set.domain.synology.me -> http://localhost:5665
################################################################################

# Project Configuration
PROJECT_NAME=set_backend
PROJECT_DIR=set_backend
# Absolute path on Synology NAS
PROJECT_PATH=/volume1/docker/settest/backend

# GitHub Repository (for automatic cloning in test/prod)
GITHUB_REPO_URL=https://github.com/tsouche/set_backend
GITHUB_BRANCH=main

# Container Names
CONTAINER_NAME=backend-container
CONTAINER_MONGODB=test-mongodb
CONTAINER_MONGO_EXPRESS=test-mongo-express
HOSTNAME=backend-host

# Network
NETWORK_NAME=test-network

# Port Mappings
# No SSH in test environment
APP_PORT=5665              # Application web interface (proxied)
MONGO_PORT=27017           # MongoDB (internal only)
MONGO_EXPRESS_PORT=8080    # Mongo Express debug tool

# External URL (configured in Synology Reverse Proxy)
EXTERNAL_URL=https://test_set.domain.synology.me

# Database Configuration
DB_NAME=rust_app_db
DB_USER=app_user
DB_PASSWORD=TestPassword456!ChangeMe
DB_ADMIN_USER=admin
DB_ADMIN_PASSWORD=TestAdmin456!ChangeMe

# Mongo Express Configuration
MONGO_EXPRESS_USER=test
MONGO_EXPRESS_PASSWORD=test456

# User/Group IDs (Synology)
USER_UID=1026
USER_GID=110
USERNAME=rustdev
GROUPNAME=rustdevteam

# Test Settings
RUST_LOG=info

# Volumes - Absolute paths on Synology NAS
VOLUME_MONGODB_DATA=/volume1/docker/settest/mongodb/data
VOLUME_MONGODB_INIT=/volume1/docker/settest/mongodb/init
VOLUME_CARGO_CACHE=/volume1/docker/settest/cargo_cache
VOLUME_TARGET_CACHE=/volume1/docker/settest/target_cache

# Docker Images
MONGO_IMAGE=mongo:7.0-jammy
MONGO_EXPRESS_IMAGE=mongo-express:1.0.0-alpha

# MongoDB Collections
COLLECTION_1=setplayers
COLLECTION_2=setgames
COLLECTION_3=setstats
