################################################################################
# Create Development Envinronment with access to a MongoDB container
################################################################################
FROM ubuntu:22.04

# âœ… CONSERVER : Vos variables d'environnement existantes  
ARG DEBIAN_FRONTEND=noninteractive
ENV TZ=Europe/Paris

################################################################################
# Install System Dependencies
################################################################################
# Update package lists and install essential development tools
# - curl: For downloading Rust installer and making HTTP requests
# - build-essential: GCC, G++, make, and other compilation tools
# - libssl-dev: OpenSSL development headers (required for many Rust crates)
# - pkg-config: Tool for retrieving library compilation flags
# - git: Version control system
# - openssh-server: SSH daemon for remote access
# - sudo: Privilege elevation for the development user
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    tree \
    unzip \
    build-essential \
    pkg-config \
    libssl-dev \
    openssh-server \
    sudo \
    mongodb-clients \
    && rm -rf /var/lib/apt/lists/*

################################################################################
# User Configuration Arguments
################################################################################
# These ARG values should match your NAS user/group IDs
# to avoid permission issues with mounted volumes
ARG USERNAME=rustdev
ARG USER_UID=1026           # User ID (should match NAS user)
ARG GROUPNAME=rustdevteam
ARG USER_GID=110            # Group ID (should match NAS group)

################################################################################
# Create Development User - with access to a MongoDB in an adjacent container
################################################################################
# Create a non-root user for development with:
# - Matching UID/GID for volume permission compatibility
# - Sudo access without password (for development convenience)
# - SSH key-based authentication (no password required)

RUN groupadd --gid ${USER_GID} ${GROUPNAME} || true && \
    useradd --uid ${USER_UID} --gid ${USER_GID} --shell /bin/bash -m ${USERNAME} || true && \
    usermod -aG sudo ${USERNAME} && \
    echo "${USERNAME} ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/${USERNAME} && \
    chmod 0440 /etc/sudoers.d/${USERNAME}

# Set working directory to user's home
WORKDIR /home/${USERNAME}

################################################################################
# Install Rust Toolchain
################################################################################
# Switch to development user to install Rust in their home directory
# - Install rustup (Rust toolchain installer)
# - Set stable toolchain as default
# - Add cargo to shell initialization files
# - Verify installation with version checks
USER ${USERNAME}
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable && \
    . /home/${USERNAME}/.cargo/env && \
    /home/${USERNAME}/.cargo/bin/rustup default stable && \
    /home/${USERNAME}/.cargo/bin/cargo --version && \
    /home/${USERNAME}/.cargo/bin/rustc --version && \
    bash -c "echo '. /home/${USERNAME}/.cargo/env' >> /home/${USERNAME}/.bashrc" && \
    bash -c "echo '. /home/${USERNAME}/.cargo/env' >> /home/${USERNAME}/.profile"

# Make Cargo binaries available system-wide
ENV PATH="/home/${USERNAME}/.cargo/bin:${PATH}"

# add environment variables for MongoDB connection
ENV MONGODB_URI=mongodb://mongo-db:27017/set_game_db
ENV MONGODB_HOST=mongo-db
ENV MONGODB_PORT=27017

################################################################################
# Configure SSH Server
################################################################################
# Switch back to root to configure SSH daemon
# - Create SSH runtime directory and .ssh directory for user
# - Disable root login (security)
# - Disable password authentication (use SSH keys only)
# - Enable public key authentication
# - Configure PAM for container compatibility
USER root

# Create SSH directories with proper permissions
RUN mkdir -p /var/run/sshd && \
    mkdir -p /home/${USERNAME}/.ssh && \
    chown ${USER_UID}:${USER_GID} /home/${USERNAME}/.ssh && \
    chmod 700 /home/${USERNAME}/.ssh

# Configure SSH daemon for key-based authentication
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin no/' /etc/ssh/sshd_config && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config && \
    sed -i 's/PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config && \
    sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/#AuthorizedKeysFile/AuthorizedKeysFile/' /etc/ssh/sshd_config && \
    sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

# Copy SSH public key from build context
# NOTE: Place your id_ed25519.pub file in the same directory as this Dockerfile
# before building the image
COPY authorized_keys /home/${USERNAME}/.ssh/authorized_keys

# Set correct permissions for authorized_keys
RUN chown ${USER_UID}:${USER_GID} /home/${USERNAME}/.ssh/authorized_keys && \
    chmod 600 /home/${USERNAME}/.ssh/authorized_keys

# Expose SSH port for remote access
EXPOSE 22

################################################################################
# Workspace Setup
################################################################################
# Create shared directory for project code
# This directory will be mounted as a volume from the host
RUN mkdir -p /workspace && chown ${USER_UID}:${USER_GID} /workspace

################################################################################
# Container Startup
################################################################################
# Start SSH server in foreground mode
# This allows remote development via SSH with key-based authentication
CMD ["/usr/sbin/sshd", "-D"]