################################################################################
# Rust Development Environment Configuration - Version 0.3
# 
# Copy this file to .env and customize for your project:
#   cp .env.example .env
#
# Then edit .env with your specific values.
# The .env file is gitignored to keep your settings private.
################################################################################

# ==============================================================================
# Project Settings
# ==============================================================================

# Project name (alphanumeric and underscores only)
# This will be used for the Cargo package name
PROJECT_NAME=rust_project

# Project directory name (relative to v0.3/)
# This directory will be created if it doesn't exist
PROJECT_DIR=rust_project

# ==============================================================================
# Container Configuration
# ==============================================================================

# Container names (must be unique on your system)
# If you run multiple instances, change these names
CONTAINER_RUST_DEV=rust-dev-container
CONTAINER_MONGODB=rust-mongodb
CONTAINER_MONGO_EXPRESS=rust-mongo-express

# Hostname for rust-dev container
HOSTNAME_RUST_DEV=rust-dev

# ==============================================================================
# Port Mappings
# ==============================================================================

# SSH port mapping (host:container)
# Access via: ssh -p 2222 rustdev@localhost
SSH_PORT=2222

# Application port (for your Rust web service)
APP_PORT=8080

# MongoDB port
MONGO_PORT=27017

# Mongo Express web UI port
MONGO_EXPRESS_PORT=8081

# ==============================================================================
# Database Configuration
# ==============================================================================

# MongoDB database name (your application database)
DB_NAME=rust_app_db

# Application database user credentials
# These are used by your Rust application to connect to MongoDB
DB_USER=app_user
DB_PASSWORD=app_password

# MongoDB admin/root credentials
# Used for database administration
DB_ADMIN_USER=admin
DB_ADMIN_PASSWORD=admin123

# ==============================================================================
# Mongo Express Configuration
# ==============================================================================

# Web UI authentication
MONGO_EXPRESS_USER=dev
MONGO_EXPRESS_PASSWORD=dev123

# ==============================================================================
# Development Settings
# ==============================================================================

# Rust log level (error, warn, info, debug, trace)
RUST_LOG=debug

# ==============================================================================
# User/Group IDs (for NAS/Volume Compatibility)
# ==============================================================================

# These should match your host system user/group IDs if using NAS
# Run 'id' on Linux/Mac or check your NAS user settings
USER_UID=1026
USER_GID=110
USERNAME=rustdev
GROUPNAME=rustdevteam

# ==============================================================================
# MongoDB Collections (Examples)
# ==============================================================================

# Collection names created during initialization
# Customize these for your project or leave as examples
COLLECTION_1=items
COLLECTION_2=users
COLLECTION_3=data

# ==============================================================================
# Advanced Settings
# ==============================================================================

# Docker network name
NETWORK_NAME=dev-network

# Volume names
VOLUME_MONGODB_DATA=mongodb-data
VOLUME_CARGO_CACHE=cargo-cache
VOLUME_TARGET_CACHE=target-cache

# MongoDB Docker image version
MONGO_IMAGE=mongo:7.0-jammy

# Mongo Express Docker image version
MONGO_EXPRESS_IMAGE=mongo-express:1.0.0-alpha
