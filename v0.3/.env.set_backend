################################################################################
# SET Game Backend - Specific Configuration
# 
# This is a project-specific .env file for the SET card game backend.
# This configuration preserves the original v0.2 naming conventions.
#
# To use this configuration:
#   cp .env.set_backend .env
#
# Then deploy normally:
#   ./deploy-v03.sh (or deploy-v03.ps1 on Windows)
################################################################################

# ==============================================================================
# Project Settings - SET Game Backend
# ==============================================================================

# Project name for the SET card game backend
PROJECT_NAME=set_backend

# Project directory name (matches v0.2 structure)
PROJECT_DIR=set_backend

# ==============================================================================
# Container Configuration - SET Project
# ==============================================================================

# Container names matching v0.2 conventions
CONTAINER_RUST_DEV=set-rust-dev
CONTAINER_MONGODB=set-mongodb
CONTAINER_MONGO_EXPRESS=set-mongo-express

# Hostname for rust-dev container
HOSTNAME_RUST_DEV=rust-dev

# ==============================================================================
# Port Mappings - Standard Configuration
# ==============================================================================

# SSH port for VS Code Remote-SSH access
SSH_PORT=2222

# Application port for SET game backend API
APP_PORT=8080

# MongoDB port
MONGO_PORT=27017

# Mongo Express web UI port
MONGO_EXPRESS_PORT=8081

# ==============================================================================
# Database Configuration - SET Game Database
# ==============================================================================

# SET game database name
DB_NAME=set_game_db

# Application database user credentials
# Used by SET backend to connect to MongoDB
DB_USER=set_app_user
DB_PASSWORD=set_app_password

# MongoDB admin/root credentials
DB_ADMIN_USER=admin
DB_ADMIN_PASSWORD=admin123

# ==============================================================================
# Mongo Express Configuration
# ==============================================================================

# Web UI authentication (for database management)
MONGO_EXPRESS_USER=dev
MONGO_EXPRESS_PASSWORD=dev123

# ==============================================================================
# Development Settings - SET Game
# ==============================================================================

# Rust log level for debugging SET game logic
RUST_LOG=debug

# ==============================================================================
# User/Group IDs (NAS Compatibility)
# ==============================================================================

# User/Group IDs matching your development environment
# These should match your NAS or host system
USER_UID=1026
USER_GID=110
USERNAME=rustdev
GROUPNAME=rustdevteam

# ==============================================================================
# MongoDB Collections - SET Game Specific
# ==============================================================================

# SET game collections
# Collection 1: Games - stores game sessions
COLLECTION_1=games

# Collection 2: Players - stores player information
COLLECTION_2=players

# Collection 3: Scores - stores game scores and statistics
COLLECTION_3=scores

# ==============================================================================
# Advanced Settings
# ==============================================================================

# Docker network name
NETWORK_NAME=dev-network

# Volume names for data persistence
VOLUME_MONGODB_DATA=set-mongodb-data
VOLUME_CARGO_CACHE=set-cargo-cache
VOLUME_TARGET_CACHE=set-target-cache

# MongoDB Docker image version
MONGO_IMAGE=mongo:7.0-jammy

# Mongo Express Docker image version
MONGO_EXPRESS_IMAGE=mongo-express:1.0.0-alpha

# ==============================================================================
# SET Game Backend - Additional Notes
# ==============================================================================
#
# Database Schema:
# ----------------
# - games: Game sessions (game_id, players, cards, started_at, status)
# - players: Player profiles (player_id, username, stats)
# - scores: Game results (score_id, game_id, player_id, points, timestamp)
#
# Environment Variables in Rust Code:
# ------------------------------------
# Access these in your Rust application:
#   - MONGODB_URI: Full connection string
#   - MONGODB_HOST: mongo-db
#   - MONGODB_PORT: 27017
#   - MONGODB_DATABASE: set_game_db
#   - MONGODB_USER: set_app_user
#   - MONGODB_PASSWORD: set_app_password
#   - RUST_LOG: debug
#
# Example Rust connection code:
# ------------------------------
# use std::env;
# 
# let db_name = env::var("MONGODB_DATABASE")
#     .unwrap_or_else(|_| "set_game_db".to_string());
# let db_host = env::var("MONGODB_HOST")
#     .unwrap_or_else(|_| "mongo-db".to_string());
# let db_port = env::var("MONGODB_PORT")
#     .unwrap_or_else(|_| "27017".to_string());
# let db_user = env::var("MONGODB_USER")
#     .unwrap_or_else(|_| "set_app_user".to_string());
# let db_pass = env::var("MONGODB_PASSWORD")
#     .unwrap_or_else(|_| "set_app_password".to_string());
# 
# let uri = format!("mongodb://{}:{}@{}:{}/{}",
#     db_user, db_pass, db_host, db_port, db_name);
#
# Deployment:
# -----------
# 1. Copy this file: cp .env.set_backend .env
# 2. Run deployment: ./deploy-v03.sh
# 3. Connect via VS Code: ssh rustdev@localhost -p 2222
# 4. Open project: /workspace/set_backend
# 5. Build: cargo build
# 6. Run: cargo run
#
# MongoDB Access:
# ---------------
# - Mongo Express UI: http://localhost:8081
# - Direct connection: mongosh mongodb://localhost:27017/set_game_db \
#                       -u set_app_user -p set_app_password
#
################################################################################
